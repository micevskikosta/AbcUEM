<body class="bg-login">
    <div class="login-container animated flipInX">
        <div class="logo-login"></div>
        
        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-signin", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h2 class="form-signin-heading">Ресетирај лозинка</h2>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <p class ="text-danger">@ViewBag.Error</p>

            @Html.HiddenFor(model => model.Code)

            @*@Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })*@

            @Html.TextBoxFor(m => m.Email, new { @class = "input-block-level login-user", @placeholder = "Електронска пошта" })

            @*@Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })*@

            @Html.PasswordFor(m => m.Password, new { @class = "input-block-level login-password", @placeholder = "Лозинка" })

            @*@Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })*@

            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input-block-level login-password", @placeholder = "Потврди Лозинка" })

            <div class="button-sign-in">Ресетирај лозинка</div>
        }
    </div>

    <script>
        $('.button-sign-in').off().on('click', function () {
            $('.form-signin').submit();
        })
    </script>
</body>

</html>


